<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <resource-ref>
        <res-ref-name>SRV-APSODDataSource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <lookup-name>APSOD-DS</lookup-name>
    </resource-ref>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>SRVCall</servlet-name>
        <servlet-class>com.servo.session.SRVCall</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>/IODClient</servlet-name>
        <jsp-file>/IODLogin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>/IODClient</servlet-name>
        <url-pattern>/ilogin</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/IOD.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>webfilter</filter-name>
        <filter-class>com.servo.xssfilter.XSSWebFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>webfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    </web-app>
